{
  "scope": "jida",
  "name": "web-backend-app",
  "version": "1.0.0",
  "author": "ftovar",
  "license": "MIT",
  "title": "Basic Web-Backend Application",
  "description": "Basic Web Backend application",
  "template": "template/template.json",
  "layout": "main-layout",
  "languages": {
    "default": "en",
    "supported": [
      "en",
      "es"
    ]
  },
  "modules": {
    "path": "modules"
  },
  "libraries": {
    "imports": [
      "@beyond-js/kernel",
      "@beyond-js/backend",
      "@beyond-js/widgets",
      "@beyond-js/ssr",
      "@beyond-js/react-widgets"
    ]
  },
  "deployment": {
    "distributions": [
      {
        "name": "web",
        "platform": "web",
        "environment": "development",
        "backend": "backend",
        "ports": {
          "bundles": 5050,
          "http": 5051,
          "inspect": 5052
        },
        "default": true
      },
      {
        "name": "backend",
        "platform": "backend",
        "environment": "development",
        "ports": {
          "bundles": 5053,
          "http": 5054,
          "inspect": 5055
        }
      },
      {
        "name": "web.build",
        "platform": "web",
        "environment": "development",
        "backend": "backend.build",
        "ports": {
          "bundles": 6060,
          "http": 6061,
          "inspect": 6062
        }
      },
      {
        "name": "backend.build",
        "platform": "backend",
        "environment": "development",
        "ports": {
          "bundles": 6063,
          "http": 6064,
          "inspect": 6065
        }
      }
    ]
  }
}
